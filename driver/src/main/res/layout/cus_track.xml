<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="75dp"
            android:text="Name : "/>

        <TextView
            android:id="@+id/rcUpdatename"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:text="Name"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="78dp"
            android:text="Email : "/>

        <TextView
            android:id="@+id/rcUpdateemail"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:autoLink="email"
            android:textColorLink="#228ADC"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Email"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Phone Number : "/>

        <TextView
            android:id="@+id/rcUpdatephone"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:autoLink="phone"
            android:textColorLink="#228ADC"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Phone Number"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:text="Address : "/>

        <TextView
            android:id="@+id/rcUpdatepurl"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="URL"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:layout_marginLeft="28dp"
        android:text="Delivery Man"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:text="Delivery Man : "/>

        <TextView
            android:id="@+id/delivery_man"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:text="Delivery Man"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:text="Delivery Man ID : "/>

        <TextView
            android:id="@+id/delivery_man_id"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Delivery Man ID"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:text="Delivery Man Phone Number: " />

        <TextView
            android:id="@+id/delivery_man_phone"
            android:textIsSelectable="true"
            android:autoLink="phone"
            android:textColorLink="#228ADC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Delivery Man Phone"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:text="Delivery Man Email Address : " />

        <TextView
            android:id="@+id/delivery_man_email"
            android:textIsSelectable="true"
            android:autoLink="email"
            android:textColorLink="#228ADC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Delivery Man Email"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textlatitude"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:text="Latitude"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textlongitude"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Longitude"
            android:textSize="20dp"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="222dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Track" />

</LinearLayout>