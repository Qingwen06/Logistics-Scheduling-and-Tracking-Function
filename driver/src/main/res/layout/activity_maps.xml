<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.driver.Map">

    <TextView
        android:id="@+id/et_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:padding="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/et_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:padding="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/et_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:padding="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:padding="12dp"
        android:text="Receiver Address :"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/et_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination Location"
        android:textColor="@color/black"
        android:padding="12dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Distance"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Estimated Time"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0.2"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:text="Navigate Route" />

    <!--    <fragment-->
<!--        android:id="@+id/mapNearBy"-->
<!--        android:name="com.google.android.gms.maps.MapFragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1" />-->

<!--    <Button-->
<!--        android:id="@+id/button"-->
<!--        android:layout_width="159dp"-->
<!--        android:layout_height="47dp"-->
<!--        android:layout_centerInParent="true"-->
<!--        android:text="Click here to start background Service"-->
<!--        android:textSize="16sp"-->
<!--        android:textStyle="bold" />-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="397dp"
        android:layout_weight="1"/>

<!--    <Button-->
<!--        android:id="@+id/btnGetDirection"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Get Direction"/>-->

    <TextView
        android:id="@+id/r_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:visibility="gone" />

    <Button
        android:id="@+id/next"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:textColor="@color/white"
        android:text="Next" />

</LinearLayout>









