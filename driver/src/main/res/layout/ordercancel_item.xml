<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="75dp"
            android:text="Name : "/>

        <TextView
            android:id="@+id/rcUpdatename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:text="Name"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="78dp"
            android:text="Email : "/>

        <TextView
            android:id="@+id/rcUpdateemail"
            android:layout_width="201dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Email"
            android:autoLink="email"
            android:textColorLink="#228ADC"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Phone Number : "/>

        <TextView
            android:id="@+id/rcUpdatephone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="Phone Number"
            android:autoLink="phone"
            android:textColorLink="#228ADC"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:text="Address : "/>

        <TextView
            android:id="@+id/rcUpdatepurl"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:text="URL"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Item : " />

        <TextView
            android:id="@+id/rcItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Item"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Item Weight : " />

        <TextView
            android:id="@+id/rcWeight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Item Weight"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Delivery Date : " />

        <TextView
            android:id="@+id/rcDeliverydate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Delivery Date"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Cancelled Date : " />

        <TextView
            android:id="@+id/rcCanceldate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:text="Cancel Date"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Cancel Reason : "/>

        <TextView
            android:id="@+id/rcReason"
            android:layout_width="143dp"
            android:layout_height="150dp"
            android:text="Reason"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/delivery_man"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:visibility="gone"
        android:text="Delivery Man"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rcUpdatestatus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:visibility="gone"
        android:text="Delivering"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rcUpdatestatuscombine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:visibility="gone"
        android:text="status"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/delivery_man_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:visibility="gone"
        android:text="Delivery Man ID"
        android:textSize="20dp" />

    <!--    <Button-->
    <!--        android:id="@+id/btnUpdate"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:layout_weight="1"-->
    <!--        android:layout_marginStart="100dp"-->
    <!--        android:layout_marginEnd="100dp"-->
    <!--        android:text="Continues" />-->

</LinearLayout>